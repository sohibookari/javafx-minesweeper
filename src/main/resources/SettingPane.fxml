<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.kiteki.minesweeper.SettingPaneController"
            prefHeight="100.0" prefWidth="200.0">

    <VBox alignment="CENTER">
        <HBox alignment="CENTER">
            <Label text="X: " />
            <TextField fx:id="xField" onKeyReleased="#handleXTyping" />
        </HBox>
        <HBox alignment="CENTER">
            <Label text="Y: " />
            <TextField fx:id="yField" onKeyReleased="#handleYTyping" />
        </HBox>
        <HBox alignment="CENTER">
            <Label text="Mines: " />
            <TextField fx:id="mField" editable="false" />
        </HBox>
        <HBox alignment="CENTER">
            <Button text="开始" onAction="#handleSubmit" />
            <Button text="取消" onAction="#handleCancel" />
        </HBox>
    </VBox>
</AnchorPane>
